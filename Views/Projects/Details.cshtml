@model Projecto.Models.ViewModels.ProjectDetailsViewModel

<div class="d-flex justify-content-between align-items-center">
  <div>
    <h2>@Model.Project.Name</h2>
    <p>@Model.Project.Description</p>
  </div>
  <div>
    <button class="btn btn-secondary">Edit</button>
    <button class="btn btn-danger">Delete</button>
  </div>
</div>

<p><strong>Open Tickets:</strong> @Model.OpenTicketsCount</p>

<div class="d-flex justify-content-between align-items-center">
  <h2>Tickets</h2>
  <a asp-controller="Tickets" asp-action="Create" asp-route-projectId="@Model.Project.Id" class="btn btn-primary">
    Add Ticket
  </a>
</div>

@if (!Model.Tickets.Any())
{
  <p>No tickets in project.</p>
}
else
{
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Priority</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var ticket in Model.Tickets)
      {
        <tr>
          <td>@ticket.Title</td>
          <td>@ticket.Status</td>
          <td>@ticket.Priority</td>
          <td>@ticket.DueDate.ToString("yyyy-MM-dd")</td>
          <td>
            <button class="btn btn-secondary">Details</button>
          </td>
        </tr>
      }
    </tbody>
  </table>
}
