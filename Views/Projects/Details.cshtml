@using Microsoft.EntityFrameworkCore.Infrastructure
@model Projecto.Models.ViewModels.ProjectDetailsViewModel

<div class="d-flex justify-content-between align-items-center">
  <div>
    <h2>@Model.Project.Name</h2>
    <p>@Model.Project.Description</p>
  </div>
  <div>
    <a asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.Project.Id" class="btn btn-secondary">Edit</a>
    <a asp-controller="Projects" asp-action="Delete" asp-route-id="@Model.Project.Id" class="btn btn-danger">Delete</a>
  </div>
</div>

<p><strong>Open Tickets:</strong> @Model.OpenTicketsCount</p>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Tickets</h2>
  <a asp-controller="Tickets" asp-action="Create" asp-route-projectId="@Model.Project.Id" class="btn btn-primary">
    Add Ticket
  </a>
</div>

@if (!Model.Tickets.Any())
{
  <p>No tickets in project.</p>
}
else
{
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th>Priority</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var ticket in Model.Tickets)
      {
        <tr>
          <td>@ticket.Title</td>
          <td>@ticket.Description</td>
          <td>
            <form asp-action="UpdateStatus" asp-controller="Tickets" method="post">
              <input type="hidden" name="Id" value="@ticket.Id" />
              <select name="Status" asp-for="@ticket.Status" asp-items="Model.StatusOptions" class="form-select"
                onchange="this.form.submit()">
              </select>
            </form>
          </td>
          <td>
            <form asp-action="UpdatePriority" asp-controller="Tickets" method="post">
              <input type="hidden" name="Id" value="@ticket.Id" />
              <select name="Priority" asp-for="@ticket.Priority" asp-items="Model.PriorityOptions" class="form-select"
                onchange="this.form.submit()">
              </select>
            </form>
          </td>
          <td>@ticket.DueDate.ToString("yyyy-MM-dd")</td>
          <td>
            <a asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-info"><i
                class="bi bi-eye"></i></a>
            <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-secondary"><i
                class="bi bi-pencil"></i></a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}
