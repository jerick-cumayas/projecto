@using Microsoft.EntityFrameworkCore.Infrastructure
@model Projecto.Models.ViewModels.ProjectDetailsViewModel

<div class="d-flex justify-content-between align-items-center">
  <div>
    <h2>@Model.Project.Name</h2>
    <p>@Model.Project.Description</p>
  </div>
  <div>
    <a asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.Project.Id" class="btn btn-secondary">Edit</a>
    <a asp-controller="Projects" asp-action="Delete" asp-route-id="@Model.Project.Id" class="btn btn-danger">Delete</a>
  </div>
</div>

<p><strong>Open Tickets:</strong> @Model.OpenTicketsCount</p>

<div class="d-flex justify-content-between align-items-center">
  <h2>Tickets</h2>
  <a asp-controller="Tickets" asp-action="Create" asp-route-projectId="@Model.Project.Id" class="btn btn-primary">
    Add Ticket
  </a>
</div>

@if (!Model.Tickets.Any())
{
  <p>No tickets in project.</p>
}
else
{
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Priority</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var ticket in Model.Tickets)
      {
        <tr>
          <td>@ticket.Title</td>
          <td>
            @* <form asp-action="UpdateStatus" asp-controller="Tickets" method="post">
              <input type="hidden" name="Id" value="@ticket.Id" />
              <select name="Status" class="form-control" onchange="this.form.submit()">
                @foreach (var status in Enum.GetValues(typeof(Projecto.Models.TaskStatus)))
                {
                  <option value="@status" selected="@(status.Equals(ticket.Status))">
                    @status
                  </option>
                }
              </select>
            </form> *@
            @*  <form asp-action="UpdateStatus" asp-controller="Tickets" method="post">
              <input type="hidden" name="Id" />
              <select name="Status" asp-items="Model.StatusOptions" class="form-control"
                onchange="this.form.submit()"></select>
            </form> *@
            <form asp-action="UpdateStatus" asp-controller="Tickets" method="post">
              <input type="hidden" name="Id" value="@ticket.Id" />
              <select name="Status" asp-for="@ticket.Status" asp-items="Model.StatusOptions" class="form-control"
                onchange="this.form.submit()">
              </select>
            </form>
          </td>
          <td>
            <form asp-action="UpdatePriority" asp-controller="Tickets" method="post">
              <input type="hidden" name="Id" value="@ticket.Id" />
              <select name="Priority" class="form-control" onchange="this.form.submit()">
                @foreach (var priority in Enum.GetValues(typeof(Priority)))
                {
                  <option value="@priority" selected="@(priority.Equals(ticket.Priority))">
                    @priority
                  </option>
                }
              </select>
            </form>
          </td>
          <td>@ticket.DueDate.ToString("yyyy-MM-dd")</td>
          <td>
            <a asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-info">Details</a>
            <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-secondary">Edit</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}
