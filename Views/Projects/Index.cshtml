@model IEnumerable<Projecto.Models.Project>

@{
    ViewData["Title"] = "Projects Page";
}

<div class="container d-flex justify-content-between align-items-center">
    <h2>Projects</h2>
    <a asp-action="Create" class="btn btn-primary">+ Add Project</a>
</div>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
