@model Projecto.Models.ViewModels.SprintDetails

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.Sprint.Title</h4>
        <p class="card-text text-muted">@Model.Sprint.Description</p>

        <dl class="row">
            <dt class="col-sm-3">Project</dt>
            <dd class="col-sm-9">@Model.Sprint.Project?.Title</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.Sprint.Status</span>
            </dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.Sprint.CreatedAt.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Due Date</dt>
            <dd class="col-sm-9">@Model.Sprint.DueDate.ToString("MMMM dd, yyyy")</dd>
        </dl>

        <div class="mt-3">
            <a asp-controller="Sprints" asp-action="Edit" asp-route-id="@Model.Sprint.Id"
                class="btn btn-warning me-2">Edit</a>
            <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>

<div class="container pt-4">
    @await Html.PartialAsync("~/Views/Tickets/Index.cshtml", Model.Tickets)
</div>
