@model IEnumerable<Projecto.Models.Ticket>

@{
  ViewData["Title"] = "Tickets Page";
}

<div class="container d-flex justify-content-between align-items-center">
  <h2>Tickets</h2>
  <a asp-action="Create" class="btn btn-primary">+ Add Ticket</a>
</div>

<div class="container">
  <table class="table table-bordered">
    <thead class="table-light">
      <tr>
        <th>Title</th>
        <th>Project</th>
        <th>Priority</th>
        <th>Status</th>
        <th>CreatedAt</th>
        <th>DueDate</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var ticket in Model)
      {
        <tr>
          <td>@ticket.Title</td>
          <td>@ticket.Project!.Name</td>
          <td>@ticket.Priority</td>
          <td>@ticket.Status</td>
          <td>@ticket.CreatedAt</td>
          <td>@ticket.DueDate</td>
          <td>
            <a asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-info"><i
                class="bi bi-eye"></i></a>
            <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-secondary"><i
                class="bi bi-pencil"></i></a>
            <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-secondary"><i
                class="bi bi-trash"></i></a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>